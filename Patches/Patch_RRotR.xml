<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Rails and Roads of the Rim (Continued)</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>
                Defs/Vehicles.VehicleDef[@Name="VehiclePawn_Railroad"]/properties/customRoadCosts</xpath>
            <value>
                <li>
                    <key>Railroad</key>
                    <value>0.2</value>
                </li>
                <li>
                    <key>RailroadOverpass</key>
                    <value>0.2</value>
                </li>
                <li>
                    <key>RailYard</key>
                    <value>0.2</value>
                </li>
                <li>
                    <key>Glitterrail</key>
                    <value>0.1</value>
                </li>
                <li>
                    <key>GlitterOverpass</key>
                    <value>0.1</value>
                </li>
                <li>
                    <key>GlitterYard</key>
                    <value>0.1</value>
                </li>
                <li>
                    <key>RailTunnel</key>
                    <value>0.1</value>
                </li>
            </value>
        </match>
    </Operation>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Rails and Roads of the Rim (Continued)</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>
                Defs/ResearchProjectDef[defName="ResearchProject_RotRRailroad"]</xpath>
            <value>
                <prerequisites>
                    <li>Research_Vehicles_Trains_Steam</li>
                </prerequisites>
            </value>
        </match>
    </Operation>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Rails and Roads of the Rim (Continued)</li>
        </mods>
        <match Class="PatchOperationReplace">
            <xpath>
                Defs/ResearchProjectDef[defName="ResearchProject_RotRRailroad"]/baseCost</xpath>
            <value>
                <baseCost>300</baseCost>
            </value>
        </match>
    </Operation>
</Patch>