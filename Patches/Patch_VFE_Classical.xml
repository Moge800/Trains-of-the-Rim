<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Factions Expanded - Classical</li>
        </mods>
        <match Class="PatchOperationInsert">
            <xpath>Defs/VFEC.RoadBuildingDef</xpath>
            <value>
                <VFEC.RoadBuildingDef>
                    <label>Build Railroad</label>
                    <defName>BuildRailRoad</defName>
                    <description>Orders pawns in the caravan to clear foliage, assemble a stone
                        track bed,
                        arrange railroad ties, and lay steel rails.</description>
                    <iconPath>UI/Gizmos/BuildRailRoad</iconPath>
                    <road>TOTR_Railroad</road>
                    <workRequired>2000</workRequired>
                </VFEC.RoadBuildingDef>
            </value>
        </match>
    </Operation>

</Patch>