<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <ThingDef Abstract="True" ParentName="BuildingBase" Name="TOTR_RailBase">
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <rotatable>true</rotatable>
        <altitudeLayer>FloorEmplacement</altitudeLayer>
        <passability>Standable</passability>
        <pathCost>0</pathCost>
        <drawerType>MapMeshOnly</drawerType>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <castEdgeShadows>false</castEdgeShadows>
        <fillPercent>0</fillPercent>
        <building>
            <isEdifice>false</isEdifice>
            <ai_chillDestination>false</ai_chillDestination>
        </building>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <Mass>1</Mass>
            <Flammability>0</Flammability>
        </statBases>
        <designationCategory>RailroadCategory</designationCategory>
        <uiIconScale>1</uiIconScale>
        <filthLeaving Inherit="False" />
        <drawStyleCategory>Conduits</drawStyleCategory>
        <designatorDropdown>TOTR_Rails</designatorDropdown>
        <comps>
            <li Class="TrainsOfTheRim.RailCompProperties">
                <hasRailAffordance>true</hasRailAffordance>
            </li>
        </comps>
        <researchPrerequisites>
            <li>Research_Vehicles_Trains_Steam</li>
        </researchPrerequisites>
    </ThingDef>

    <ThingDef ParentName="TOTR_RailBase" Name="TOTR_Rail">
        <defName>TOTR_Rail</defName>
        <label>Rail</label>

        <size>(3,1)</size>
        <graphicData>
            <texPath>Things/Vehicles/Rail/Track/rail_3x1</texPath>
            <drawSize>(3,1)</drawSize>
        </graphicData>

        <statBases>
            <WorkToBuild>5</WorkToBuild>
        </statBases>
        <costList>
            <Steel>1</Steel>
        </costList>
    </ThingDef>

