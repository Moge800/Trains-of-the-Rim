<?xml version="1.0" encoding="utf-8" ?>

<Defs>
    <Vehicles.VehicleBuildDef ParentName="RailVehicleBaseBuildable">
        <defName>TOTR_Trains_Railcar_Boxcar_Blueprint</defName>
        <label>Boxcar</label>
        <description>A boxcar for cargo transportation.</description>

        <graphicData>
            <texPath>Things/Vehicles/Rail/Railcars/Boxcar/boxcar</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(5,10)</drawSize>
            <drawOffsetWest>(0,0,0.75)</drawOffsetWest>
            <drawOffsetEast>(0,0,0.75)</drawOffsetEast>
        </graphicData>

        <size>(3,10)</size>

        <statBases>
            <MaxHitPoints>10000</MaxHitPoints>
            <WorkToBuild>2000</WorkToBuild>
            <Flammability>0.05</Flammability>
        </statBases>

        <researchPrerequisites>
            <li>Research_Vehicles_Trains_Steam</li>
        </researchPrerequisites>

        <costList>
            <Steel>400</Steel>
        </costList>

        <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
        <thingToSpawn>TOTR_Trains_Railcar_Boxcar</thingToSpawn>
    </Vehicles.VehicleBuildDef>
