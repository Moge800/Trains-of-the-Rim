<?xml version="1.0" encoding="utf-8" ?>

<Defs>
    <Vehicles.VehicleBuildDef ParentName="RailVehicleBaseBuildable">
        <defName>TOTR_Railcars_Hopper_Blueprint</defName>
        <label>Hopper</label>
        <description>A railcar for transporting bulk materials.</description>

        <graphicData>
            <texPath>Things/Vehicles/Rail/Railcars/Hopper/hopper</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(5,10)</drawSize>
            <drawOffsetWest>(0,0,0.25)</drawOffsetWest>
            <drawOffsetEast>(0,0,0.25)</drawOffsetEast>
        </graphicData>

        <size>(3,10)</size>

        <statBases>
            <MaxHitPoints>10000</MaxHitPoints>
            <WorkToBuild>30</WorkToBuild>
            <Flammability>0.05</Flammability>
        </statBases>

        <researchPrerequisites>
            <li>Research_Vehicles_Trains_Steam</li>
        </researchPrerequisites>

        <costList>
            <Steel>500</Steel>
        </costList>

        <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>

        <thingToSpawn>TOTR_Railcars_Hopper</thingToSpawn>
    </Vehicles.VehicleBuildDef>
</Defs>
