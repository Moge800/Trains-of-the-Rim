<?xml version="1.0" encoding="utf-8" ?>

<Defs>
    <Vehicles.VehicleDef ParentName="VVE_VehiclePawn_Land">
        <defName>Steam_Engine_Train</defName>
        <label>Steam Engine Train</label>
        <description>A steam engine train to rule the rails.</description>

        <!-- TODO: update to train texture -->
        <graphicData>
            <texPath>Things/Vehicles/Rail/Frisco/frisco</texPath>
            <graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
            <!-- <shaderType>CutoutComplexPattern</shaderType> -->
            <drawSize>(4,12)</drawSize>
            <drawOffset>(0,0,1)</drawOffset>
            <drawRotated>false</drawRotated>
        </graphicData>
        <!-- <graphicData>
            <texPath>Things/Vehicles/Tier1/Tier1_Van/Tier1_Van</texPath>
            <graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
            <shaderType>CutoutComplexPattern</shaderType>
            <drawSize>(3,5)</drawSize>
            <color>(160, 160, 160)</color>
            <colorTwo>(126, 126, 126)</colorTwo>
            <colorThree>(196, 200, 202)</colorThree>
        </graphicData> -->

        <fillPercent>1</fillPercent>

        <buildDef>Steam_Engine_Train_Blueprint</buildDef>

        <!-- TODO: update to full train size -->
        <size>(2,11)</size>

        <vehicleMovementPermissions>DriverNeeded</vehicleMovementPermissions>
        <vehicleCategory>Transport</vehicleCategory>
        <techLevel>Industrial</techLevel>
        <vehicleType>Land</vehicleType>

        <!-- TODO: update train stats -->
        <statBases>
            <ArmorRating_Blunt>1.0</ArmorRating_Blunt>
            <ArmorRating_Sharp>1.0</ArmorRating_Sharp>
            <Flammability>0</Flammability>
            <MarketValue>2000</MarketValue>
        </statBases>

        <soundOneShotsOnEvent Inherit = "False">
            <li>
                <key>PawnEntered</key>
                <value>VVE_VehicleEnter</value>
            </li>
            <li>
                <key>PawnExited</key>
                <value>VVE_VehicleEnter</value>
            </li>
            <li>
                <key>DraftOn</key>
                <value>SRTS_Trains_Sound_Steam_Train_Leaving</value>
            </li>
            <li>
                <key>DraftOff</key>
                <value>SRTS_Trains_Sound_Steam_Train_Incoming</value>
            </li>
        </soundOneShotsOnEvent>

        <!-- TODO: update train vehicle stats -->
        <vehicleStats>
            <Mass>200</Mass>
            <MoveSpeed>10</MoveSpeed>
            <CargoCapacity>24000</CargoCapacity>
            <RepairRate>0.5</RepairRate>
            <AccelerationRate>0.02</AccelerationRate>
        </vehicleStats>

        <properties>
            <healthLabel_Healthy>Operational</healthLabel_Healthy>
            <healthLabel_Injured>Needs Repairs</healthLabel_Injured>
            <healthLabel_Immobile>Inoperable</healthLabel_Immobile>
            <defaultTerrainImpassable>true</defaultTerrainImpassable>

            <roles>
                <li>
                    <key>driver</key>
                    <label>Engineer</label>
                    <handlingTypes>
                        <li>Movement</li>
                    </handlingTypes>
                    <slots>1</slots>
                    <slotsToOperate>1</slotsToOperate>
                    <hitbox>
                        <cells>
                            <li>(-1, 1)</li>
                        </cells>
                    </hitbox>
                </li>
                <li>
                    <key>passengerShotgun</key>
                    <label>Stoker</label>
                    <slots>1</slots>
                    <hitbox>
                        <cells>
                            <li>(1, 1)</li>
                        </cells>
                    </hitbox>
                </li>
                <li>
                    <key>passengerShotgun</key>
                    <label>Passenger</label>
                    <slots>3</slots>
                    <hitbox>
                        <cells>
                            <li>(-1, 0)</li>
                            <li>(-0, 0)</li>
                            <li>(1, 0)</li>
                        </cells>
                    </hitbox>
                </li>
            </roles>

            <customTerrainCosts AllowTerrainWithTag="Rail" PathCost="1">
                <li>
                    <key>Bridge</key>
                    <value>1</value>
                </li>
            </customTerrainCosts>
            <customRoadCosts>
                <li>
                    <key>Railroad</key>
                    <value>1</value>
                </li>
            </customRoadCosts>
        </properties>

        <!-- TODO: update with health and armor stats for train components -->
        <components>
            <li>
                <key>Body</key>
                <label>Body</label>
                <health>250</health>
                <armor>4</armor>

                <hitbox>
                    <side>BodyNoOverlap</side>
                </hitbox>

                <categories>
                    <li>BodyIntegrity</li>
                </categories>
            </li>
            <li>
                <key>Engine</key>
                <label>Engine</label>
                <health>50</health>
                <efficiencyWeight>10</efficiencyWeight>

                <reactors>
                    <li Class = "Vehicles.Reactor_Explosive">
                        <indicator>VF_Explosive</indicator>
                        <chance>0.25</chance>
                        <radius>3</radius>
                        <damageDef>Bomb</damageDef>
                    </li>
                    <li Class = "Vehicles.Reactor_FuelLeak"/>
                </reactors>

                <hitbox>
                    <cells>
                        <li>(-1, -2)</li>
                        <li>(0, -2)</li>
                    </cells>
                </hitbox>

                <categories>
                    <li>MoveSpeed</li>
                </categories>
            </li>
            <li>
                <key>FrontLeftWheel</key>
                <label>Front Left Wheel</label>
                <health>30</health>
                <tags>
                    <li>Wheel</li>
                </tags>
                <hitbox>
                    <fallthrough>false</fallthrough>
                    <cells>
                        <li>(-1, 1)</li>
                    </cells>
                </hitbox>

                <categories>
                    <li>MoveSpeed</li>
                </categories>
            </li>
            <li>
                <key>FrontRightWheel</key>
                <label>Front Right Wheel</label>
                <health>30</health>
                <tags>
                    <li>Wheel</li>
                </tags>
                <hitbox>
                    <fallthrough>false</fallthrough>
                    <cells>
                        <li>(0, 1)</li>
                    </cells>
                </hitbox>

                <categories>
                    <li>MoveSpeed</li>
                </categories>
            </li>
            <li>
                <key>BackLeftWheel</key>
                <label>Back Left Wheel</label>
                <health>30</health>
                <tags>
                    <li>Wheel</li>
                </tags>
                <hitbox>
                    <fallthrough>false</fallthrough>
                    <cells>
                        <li>(-1, -2)</li>
                    </cells>
                </hitbox>

                <categories>
                    <li>MoveSpeed</li>
                </categories>
            </li>
            <li>
                <key>BackRightWheel</key>
                <label>Back Right Wheel</label>
                <health>30</health>
                <tags>
                    <li>Wheel</li>
                </tags>
                <hitbox>
                    <fallthrough>false</fallthrough>
                    <cells>
                        <li>(0, -2)</li>
                    </cells>
                </hitbox>

                <categories>
                    <li>MoveSpeed</li>
                </categories>
            </li>
            <li>
                <key>FrontLeftSuspension</key>
                <label>Front Left Suspension</label>
                <health>20</health>

                <hitbox>
                    <cells>
                        <li>(-1, 1)</li>
                    </cells>
                </hitbox>

                <categories>
                    <li>MoveSpeed</li>
                </categories>
            </li>
            <li>
                <key>FrontRightSuspension</key>
                <label>Front Right Suspension</label>
                <health>20</health>

                <hitbox>
                    <cells>
                        <li>(0, 1)</li>
                    </cells>
                </hitbox>

                <categories>
                    <li>MoveSpeed</li>
                </categories>
            </li>
            <li>
                <key>Gearbox</key>
                <label>Gearbox</label>
                <health>45</health>

                <hitbox>
                    <cells>
                        <li>(-1, 1)</li>
                        <li>(0, 1)</li>
                    </cells>
                </hitbox>

                <categories>
                    <li>MoveSpeed</li>
                </categories>
            </li>
            <li>
                <key>LeftSidePanel</key>
                <label>Left Side Panel</label>
                <health>90</health>

                <hitbox>
                    <side>Left</side>
                </hitbox>
            </li>
            <li>
                <key>RightSidePanel</key>
                <label>Right Side Panel</label>
                <health>90</health>

                <hitbox>
                    <side>Right</side>
                </hitbox>
            </li>
            <li>
                <key>Chemtank</key>
                <label>Chemtank</label>
                <health>40</health>

                <hitbox>
                    <cells>
                        <li>(-1, -2)</li>
                        <li>(0, -2)</li>
                    </cells>
                </hitbox>
            </li>
            <li>
                <key>FrontBumper</key>
                <label>Front Bumper</label>
                <health>30</health>

                <hitbox>
                    <side>Front</side>
                </hitbox>
            </li>
            <li>
                <key>RearBumper</key>
                <label>Rear Bumper</label>
                <health>30</health>

                <hitbox>
                    <side>Back</side>
                </hitbox>
            </li>
            <li>
                <key>Upholstery</key>
                <label>Upholstery</label>
                <health>30</health>
            </li>
            <li>
                <key>Dashboard</key>
                <label>Dashboard</label>
                <health>45</health>
            </li>
            <li>
                <key>SteeringWheel</key>
                <label>Steering Wheel</label>
                <health>20</health>
            </li>
            <li>
                <key>Alternator</key>
                <label>Alternator</label>
                <health>20</health>
            </li>
            <li>
                <key>Hood</key>
                <label>Hood</label>
                <health>40</health>
            </li>
            <li>
                <key>Roof</key>
                <label>Roof</label>
                <health>45</health>
            </li>
        </components>

        <comps>
            <li Class="Vehicles.CompProperties_FueledTravel">
                <fuelType>Chemfuel</fuelType>
                <fuelConsumptionRate>30</fuelConsumptionRate>
                <fuelCapacity>2000</fuelCapacity>
                <fuelConsumptionCondition>Drafted</fuelConsumptionCondition>
            </li>
            <li Class="Vehicles.CompProperties_UpgradeTree">
                <upgrades/>
            </li>
        </comps>
    </Vehicles.VehicleDef>
</Defs>