<?xml version="1.0" encoding="utf-8" ?>

<Defs>
    <Vehicles.VehicleBuildDef ParentName="RailVehicleBaseBuildable">
        <defName>Steam_Engine_Train_Blueprint</defName>
        <label>Steam Engine Train</label>
        <description>A steam engine train to rule the rails.</description>

        <graphicData>
            <texPath>Things/Vehicles/Rail/Locomotives/FriscoWithTender/frisco_full</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(4,21)</drawSize>
            <drawOffset>(0,0,1.5)</drawOffset>
            <drawRotated>false</drawRotated>
        </graphicData>
        <size>(2,18)</size>

        <statBases>
            <MaxHitPoints>10000</MaxHitPoints>
            <WorkToBuild>30</WorkToBuild>
            <Flammability>0.05</Flammability>
        </statBases>

        <researchPrerequisites>
            <li>Research_Vehicles_Trains_Steam_Engine</li>
        </researchPrerequisites>

        <costList>
            <ComponentIndustrial>35</ComponentIndustrial>
            <Steel>3000</Steel>
        </costList>

        <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>

        <thingToSpawn>Steam_Engine_Train</thingToSpawn>
        <!-- TODO: update to train whistle -->
        <soundBuilt>ShipBigConstruction</soundBuilt>
    </Vehicles.VehicleBuildDef>
</Defs>
