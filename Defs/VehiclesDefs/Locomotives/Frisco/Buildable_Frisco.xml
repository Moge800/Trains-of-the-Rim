<Defs>
    <Vehicles.VehicleBuildDef ParentName="RailVehicleBaseBuildable">
        <defName>TOTR_Steam_Locomotive_Frisco_Chemfuel_Blueprint</defName>
        <label>Frisco 4-8-4 (Chemfuel)</label>
        <description>A large steam locomotive with a separate tender for fuel and water. This 4-8-4 is primarily used as a road engine for hauling large, heavy trains. \n\n&lt;color=#bb8f04&gt;Crew:&lt;/color&gt; Engineer x2, Passenger x1\n&lt;color=#bb8f04&gt;Fuel type:&lt;/color&gt; Chemfuel</description>

        <graphicData>
            <texPath>Things/Vehicles/Rail/Locomotives/FriscoWithTender/frisco</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(5,22)</drawSize>
            <drawOffsetWest>(0,0,0.75)</drawOffsetWest>
            <drawOffsetEast>(0,0,0.75)</drawOffsetEast>
        </graphicData>

        <statBases>
            <MaxHitPoints>10000</MaxHitPoints>
            <WorkToBuild>14000</WorkToBuild>
            <Flammability>0.05</Flammability>
        </statBases>

        <size>(3,22)</size>

        <researchPrerequisites>
            <li>Research_Vehicles_Trains_Steam</li>
        </researchPrerequisites>

        <costList>
            <ComponentIndustrial>8</ComponentIndustrial>
            <Steel>850</Steel>
        </costList>

        <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>

        <thingToSpawn>TOTR_Steam_Locomotive_Frisco_Chemfuel</thingToSpawn>
        <soundBuilt>BulletImpact_Metal</soundBuilt>
    </Vehicles.VehicleBuildDef>
