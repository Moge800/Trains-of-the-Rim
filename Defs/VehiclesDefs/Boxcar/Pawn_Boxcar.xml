<?xml version="1.0" encoding="utf-8" ?>

<Defs>
    <Vehicles.VehicleDef ParentName="VehiclePawn_Railroad">
        <defName>TOTR_Trains_Railcar_Boxcar</defName>
        <label>Boxcar</label>
        <description>A boxcar for cargo transportation.</description>

        <!-- TODO: update to full train texture -->
        <graphicData>
            <texPath>Things/Vehicles/Rail/Railcars/Boxcar/boxcar</texPath>
            <graphicClass>Vehicles.Graphic_Vehicle</graphicClass>
            <!-- <shaderType>CutoutComplexPattern</shaderType> -->
            <drawSize>(4,12)</drawSize>
        </graphicData>

        <fillPercent>0.8</fillPercent>

        <buildDef>TOTR_Trains_Railcar_Boxcar_Blueprint</buildDef>

        <!-- TODO: update to full train size -->
        <size>(3,9)</size>

        <!-- TODO: update train stats -->
        <statBases>
            <Mass>100000</Mass>
            <ArmorRating_Blunt>1.0</ArmorRating_Blunt>
            <ArmorRating_Sharp>1.0</ArmorRating_Sharp>
			<ArmorRating_Heat>1.0</ArmorRating_Heat>
            <Flammability>0</Flammability>
            <MarketValue>2000</MarketValue>
        </statBases>

        <!-- TODO: update train vehicle stats -->
        <vehicleStats>
            <Mass>200</Mass>
            <MoveSpeed>0</MoveSpeed>
            <CargoCapacity>680000</CargoCapacity>
            <RepairRate>0.5</RepairRate>
            <AccelerationRate>0.02</AccelerationRate>
        </vehicleStats>

        <race>
			<baseBodySize>3.5</baseBodySize>
		</race>

        <properties>
            <roles>
                <li>
                    <key>driver</key>
                    <label>Engineer</label>
                    <handlingTypes>
                    <slots>1</slots>
                    <slotsToOperate>1</slotsToOperate>
                        <li>Movement</li>
                    </handlingTypes>
                    <hitbox>
                        <cells>
                            <li>(-1, 1)</li>
                        </cells>
                    </hitbox>
                </li>
                <li>
                    <key>passengerShotgun</key>
                    <label>Stoker</label>
                    <slots>1</slots>
                    <hitbox>
                        <cells>
                            <li>(1, 1)</li>
                        </cells>
                    </hitbox>
                </li>
                <li>
                    <key>passengerShotgun</key>
                    <label>Passenger</label>
                    <slots>3</slots>
                    <hitbox>
                        <cells>
                            <li>(-1, 0)</li>
                            <li>(-0, 0)</li>
                            <li>(1, 0)</li>
                        </cells>
                    </hitbox>
                </li>
            </roles>
        </properties>

        <!-- TODO: update with health and armor stats for train components -->
